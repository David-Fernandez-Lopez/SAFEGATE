<h1>Mi perfil</h1>
<div class="row justify-content-center d-flex"></div>
<div class="col-md-4 mb-3">
    <div class="card">
        <div class="card-body">
            <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}">
            <h3 class="card-title">{{name}} {{lastname}}</h3>
            <p class="card-text text-capitalize"> Email: {{email}}</p>
            <p class="card-text text-capitalize"> Fecha de nacimiento: {{birthDate}}</p>
            <p class="card-text text-capitalize"> DNI: {{idDocument}}</p>
            <p class="card-text text-capitalize"> Nacionalidad: {{nationality}}</p>
            <p class="card-text text-capitalize">Teléfono: {{phoneNumber}}</p>
            <p class="card-text text-capitalize">Dirección: {{addresInfo}}, {{province}}, {{Ciudad}}, {{zipCode}}</p>
            <p class="card-text text-capitalize">Apodo: {{username}}</p>
            <p class="card-text text-capitalize">Teléfono de Emergencia: {{emergencyNumber}}</p>
            <p class="card-text text-capitalize">Teléfono: {{phoneNumber}}</p>
        </div>
    </div>
</div>
</div>

