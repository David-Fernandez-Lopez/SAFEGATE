<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo integrador</h1>
            <hr>
            <form action="/registro-integrador" method="POST" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password">
                    <div id="password" class="form-text">La contraseña debería incluir al menos un dígito, una
                        minúscula, una mayúscula y 8 caracteres.</div>
                </div>

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="lastname" class="form-label">Apellidos</label>
                    <input type="text" class="form-control" id="lastname" name="lastname">
                </div>

                <div class="mb-3">
                    <label for="idDocument" class="form-label">DNI/NIE</label>
                    <input type="text" class="form-control" id="idDocument" name="idDocument">
                </div>


                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Teléfono</label>
                    <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber">
                </div>

                <div class="mb-3">
                    <label for="imageUrl" class="form-label">Foto de perfil</label>
                    <input type="file" class="form-control" id="imageUrl" name="imageField">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Completar registro</button>
                </div>

            </form>
        </div>
    </div>

</div>